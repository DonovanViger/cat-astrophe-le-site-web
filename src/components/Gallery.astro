---
const images = [
  {
    url: '/images/image.png',
    title: 'VR Exploration'
  },
  {
    url: '/images/image_1.png',
    title: 'Cat Adventures'
  },
  {
    url: '/images/image_2.png',
    title: 'Magical Worlds'
  },
  {
    url: '/images/image_3.png',
    title: 'Cute Moments'
  },
    {
    url: '/images/image_4.png',
    title: 'Cute Moments'
  },
    {
    url: '/images/image_5.png',
    title: 'Cute Moments'
  }
];
---
<section id="gallery" class="gallery section">
  <div class="container">
    <h2>Galerie du jeu</h2>
    <div class="gallery-grid">
      {images.map(image => (
        <div class="gallery-item">
          <img src={image.url} alt={image.title} />
          <h3>{image.title}</h3>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .gallery {
    background-color: var(--color-accent);
  }

  h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: var(--color-secondary);
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .gallery-item {
    background: white;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .gallery-item:hover {
    transform: translateY(-5px);
  }

  img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  h3 {
    padding: 1rem;
    text-align: center;
    color: var(--color-secondary);
  }
</style>